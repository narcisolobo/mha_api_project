components:
  schemas:
    Alias:
      type: object
      description: Serializer for Alias model, includes only the name.
      properties:
        name:
          type: string
          maxLength: 200
      required:
      - name
    Character:
      type: object
      description: |-
        Serializer for Character model, returning nested quirks, affiliations, and aliases.
        Includes an image and kanji field.
      properties:
        id:
          type: integer
          readOnly: true
        name:
          type: string
          maxLength: 100
        kanji:
          type: string
          maxLength: 100
        url:
          type: string
          format: uri
          nullable: true
          maxLength: 200
        image:
          type: string
          format: uri
        quirks:
          type: string
          readOnly: true
        affiliations:
          type: array
          items:
            $ref: '#/components/schemas/CharacterAffiliation'
          readOnly: true
        aliases:
          type: array
          items:
            $ref: '#/components/schemas/Alias'
          readOnly: true
      required:
      - affiliations
      - aliases
      - id
      - image
      - name
      - quirks
    CharacterAffiliation:
      type: object
      description: Serializer for the CharacterAffiliation model, flattening name
        and note.
      properties:
        name:
          type: string
        note:
          type: string
          maxLength: 50
      required:
      - name
  securitySchemes:
    basicAuth:
      type: http
      scheme: basic
    cookieAuth:
      type: apiKey
      in: cookie
      name: sessionid
