  /api/characters/{id}/:
    get:
      operationId: characters_retrieve
      description: API view that retrieves a single character by ID.
      parameters:
      - in: path
        name: id
        schema:
          type: integer
        required: true
      tags:
      - characters
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Character'
              examples:
                CharacterDetailExample:
                  value:
                    id: 1
                    name: Izuku Midoriya
                    kanji: 緑谷出久
